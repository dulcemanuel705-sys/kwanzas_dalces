{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node@3.0.0" },
    { "src": "public/**/*", "use": "@vercel/static@1.0.0" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "env": { "NODE_ENV": "production" },
  "functions": {
    "api/index.js": { "maxDuration": 30 }
  }
}
