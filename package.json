{
  "name": "kwanza-manipulus",
  "version": "1.0.0",
  "description": "Sistema completo de gestÃ£o empresarial",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed:admin": "node scripts/seedAdmin.js",
    "seed:projectos": "node scripts/seedProjectos.js",
    "docker:build": "docker build -t kwanza-manipulus .",
    "docker:run": "docker run -p 3000:3000 --env-file .env kwanza-manipulus",
    "docker:prod": "docker-compose -f docker-compose.yml up -d --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "backup:db": "docker-compose exec db mysqldump -u root -p kwanza_manipulus > backup_$(date +%Y%m%d_%H%M%S).sql",
    "backup:uploads": "tar -czf uploads_backup_$(date +%Y%m%d_%H%M%S).tar.gz public/uploads/",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "migrate": "node scripts/migrate.js",
    "lint": "echo 'Linting not configured yet'",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "prod:setup": "npm run docker:build && npm run docker:prod && npm run seed:admin"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "sequelize",
    "jwt",
    "management-system"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "@supabase/supabase-js": "^2.39.7",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.14.1",
    "nodemon": "^3.1.10",
    "prom-client": "^15.1.0",
    "sequelize": "^6.37.7",
    "validator": "^13.15.23",
    "winston": "^3.14.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "sequelize-cli": "^6.6.3"
  }
}
